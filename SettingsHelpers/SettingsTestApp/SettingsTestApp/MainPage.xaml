<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SettingsTestApp"
             x:Class="SettingsTestApp.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <StackLayout VerticalOptions="StartAndExpand" BackgroundColor="Green" Margin="25,0,25,0">
                <Button Clicked="Button_Clicked" Text="Add Settings"></Button>

                <Label x:Name="SettingFromDatabase" TextColor="White" VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

                <Button Clicked="Button_Clicked_1" Text="Load Setting"></Button>
                <Button Clicked="Button_Clicked_2" Text="Clear Setting"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>